{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 600,
  "data": {
    "url": "https://raw.githubusercontent.com/GurgobindSingh/FIT3179/refs/heads/main/Week9Homework/malaysia_map.topojson",
    "format": {
      "type": "topojson",
      "feature": "MYSADM1gbOpen"
    }
  },
  "transform": [
    {
      "lookup": "properties.shapeName",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/GurgobindSingh/FIT3179/refs/heads/main/Week9Homework/house_affordability.csv"
        },
        "key": "State",
        "fields": ["House Affordability Index (HAI)"]
      }
    }
  ],
  "projection": {
    "type": "mercator",
    "scale": 2500,
    "translate": [400, 350]
  },
  "mark": "geoshape",
  "encoding": {
    "color": {
      "field": "House Affordability Index (HAI)",
      "type": "quantitative",
      "scale": {"scheme": "reds"},
      "legend": {"title": "House Affordability Index"}
    },
    "tooltip": [
      {"field": "properties.shapeName", "type": "nominal", "title": "State"},
      {"field": "House Affordability Index (HAI)", "type": "quantitative", "format": ".2f"}
    ]
  }
}
