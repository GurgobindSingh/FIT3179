{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 1000,
  "height": 600,
  "projection": {"type": "equalEarth"},
  
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/GurgobindSingh/FIT3179/main/Week9Homework/malaysia_map.topojson",
        "format": {"type": "topojson", "feature": "ne_10m_graticules_1"}  
      },
      "mark": {"type": "geoshape", "stroke": "#cccccc", "strokeWidth": 0.5, "fill": null}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/GurgobindSingh/FIT3179/main/Week9Homework/malaysia_map.topojson",
        "format": {"type": "topojson", "feature": "my"}
      },
      "transform": [
        {
          "lookup": "properties.name",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/GurgobindSingh/FIT3179/main/Week9Homework/house_price_2022.csv",
              "format": {"type": "csv"}
            },
            "key": "State",
            "fields": ["Relative House Price (%)"]
          }
        },
        {
          "calculate": "datum['Relative House Price (%)'] <= 5 ? 'Very Low Price (≤5%)' : datum['Relative House Price (%)'] <= 7 ? 'Low Price (5–7%)' : datum['Relative House Price (%)'] <= 9 ? 'Moderate Price (7–9%)' : datum['Relative House Price (%)'] <= 11 ? 'High Price (9–11%)' : 'Very High Price (>11%)'",
          "as": "Price_Level"
        }
      ],
      "mark": {"type": "geoshape", "stroke": "#ffffff", "strokeWidth": 0.5},
      "encoding": {
        "color": {
          "field": "Price_Level",
          "type": "ordinal",
          "scale": {
            "domain": [
              "Very Low Price (≤5%)",
              "Low Price (5–7%)",
              "Moderate Price (7–9%)",
              "High Price (9–11%)",
              "Very High Price (>11%)"
            ],
            "range": ["#deebf7", "#c6dbef", "#9ecae1", "#3182bd", "#08519c"]
          },
          "legend": {
            "title": "Relative House Price (%)",
            "titleFontSize": 14,
            "labelFontSize": 12,
            "symbolSize": 500,
            "orient": "bottom",
            "direction": "horizontal",
            "offset": 20,
            "padding": 10
          }
        },
        "tooltip": [
          {"field": "properties.name", "type": "nominal", "title": "State"},
          {"field": "Relative House Price (%)", "type": "quantitative", "format": ".2f", "title": "Relative House Price (%)"},
          {"field": "Price_Level", "type": "nominal", "title": "Price Category"}
        ]
      }
    }
  ]
}
