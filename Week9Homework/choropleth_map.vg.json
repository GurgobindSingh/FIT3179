{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Malaysia House Affordability Index by State",
  "width": 800,
  "height": 600,
  "projection": {"type": "mercator", "scale": 2500, "translate": [400, 350]},
  "data": {
    "url": "https://raw.githubusercontent.com/GurgobindSingh/FIT3179/main/Week9Homework/malaysia_map.topojson",
    "format": {"type": "topojson", "feature": "MYSADM1gbOpen"}
  },
  "transform": [
    {
      "lookup": "properties.shapeName",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/GurgobindSingh/FIT3179/main/Week9Homework/house_affordability.csv"
        },
        "key": "State",
        "fields": ["House Affordability Index (HAI)"]
      }
    },
    {"calculate": "datum['House Affordability Index (HAI)'] + 0.1", "as": "HAI"}
  ],
  "mark": {"type": "geoshape"},
  "encoding": {
    "color": {
      "field": "HAI",
      "type": "quantitative",
      "scale": {"scheme": "reds"},
      "legend": {"title": "House Affordability Index"}
    },
    "tooltip": [
      {"field": "properties.shapeName", "type": "nominal", "title": "State"},
      {"field": "HAI", "type": "quantitative", "format": ".2f"}
    ]
  }
}
